@model ML.Producto
@{
    ViewData["Title"] = "ProductoGetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-3">
        <div class="col-md-12">
            <h1>Productos</h1>
        </div>
    </div>

    <hr />

    @if (Model.Productos.Count > 0 && Model.Productos != null)
    {
        <div class="row">
            @foreach (ML.Producto producto in Model.Productos)
            {
                <div class="col-md-4">
                    <section class="card bg-primary">
                        <div class="product-image">
                            @if (producto.Imagen == null)
                            {
                                <img id="imgProducto" src="~/Images/Default_pfp.svg.png" width="" height="">
                            }
                            else
                            {
                                <img id="imgProducto" src="data:image/png;base64,@Convert.ToBase64String(producto.Imagen)" width="" height="">
                            }
                        </div>
                        <div class="product-info">
                            <h2>@producto.Nombre</h2>
                            <p>@producto.Descripcion</p>
                            <div class="price">$@producto.PrecioUnitario</div>
                        </div>
                        <div class="btn">
                            <a href="@Url.Action("Carrito", "Venta", new { IdProducto = producto.IdProducto })" class="btn btn-primary buy-btn bi bi-cart-plus-fill"></a>
@*                             <button class="fav">
                                <svg class="svg" id="i-star" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" stroke="#000" stroke-linecap="round" stroke-linejoin="round" stroke-width="2">
                                    <path d="M16 2 L20 12 30 12 22 19 25 30 16 23 7 30 10 19 2 12 12 12 Z" />
                                </svg>
                            </button> *@
                        </div>
                    </section>
                </div>
            }
        </div>
    }

</div>

<style>
    /* @@import url("https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap"); */

/*===== VARIABLES CSS =====*/
:root {
  --dark-color-lighten: #f2f5ff;
  --red-card: #a62121;
  --blue-card: #4bb7e6;
  --btn: #141414;
  --btn-hover: #3a3a3a;
  --text: #fbf7f7;
}

/*===== RESET =====*/

a {
  font-family: "Montserrat", sans-serif; 
  border-radius: 0.2rem;
  color: var(--text);
  cursor: pointer;
}


img {
  max-width: 100%;
  height: 100%;
  user-select: none;
        display: block;
        margin-left: auto;
        margin-right: auto;
}

/*===== CARD =====*/

.card {
  
  padding: 1rem;
  width: 350px;
  height: 450px;
  box-shadow: -1px 15px 30px -12px rgb(32, 32, 32);
  border-radius: 0.9rem;
  background-color: var(--blue-card);
  color: var(--text);
  cursor: pointer;
}

.card-blue {
  background: var(--blue-card);
}

.product-image {
    align-content:center;
    align-items:center;
  height: 257px;
  width: auto;
  filter: drop-shadow(5px 10px 15px rgba(8, 9, 13, 0.4));
}
.product-info {
  text-align: center;
}

.product-info h2 {
  font-size: 1.4rem;
  font-weight: 600;
}
.product-info p {
  margin: 0.4rem;
  font-size: 0.8rem;
  font-weight: 600;
}
.price {
  font-size: 1.2rem;
  font-weight: 500;
}
.card .btn {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin-top: 0.8rem;
}
.buy-btn {
  background-color: var(--btn);
  padding: 0.6rem 3.5rem;
  font-weight: 600;
  font-size: 1rem;
  transition: 300ms ease;
}
.buy-btn:hover {
  background-color: var(--btn-hover);
}
.fav {
  box-sizing: border-box;
  background: #fff;
  padding: 0.5rem 0.5rem;
  border: 1px solid#000;
  display: grid;
  place-items: center;
}

.svg {
  height: 25px;
  width: 25px;
  fill: #fff;
  transition: all 500ms ease;
}

.fav:hover .svg {
  fill: #000;
}

@@media screen and (max-width: 800px) {
   
  .container {
      display: grid
    padding: 2rem 0;
    width: 100%;
    flex-direction: column;
    gap: 3rem;
  }
}
</style>