@model ML.Departamento
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Departamento</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione un departamento para editarlo o para agregar un departamento.</h5>
            <hr />
        </div>
    </div>

    <div class="row mb-3">
        <div style="float:right;">
            @Html.ActionLink("Agregar", "Form", "Departamento", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <table class="table table-dark table-hover table-striped table-responsive" id="myTable">
        <thead>
            <tr>
                <td class="text-center" style=" font-weight:bold;">Editar</td>

                <td class="hidden">IdDepartamento</td>
                <td class="text-center" style="font-weight:bold;">Nombre</td>
                <td class="hidden">IdArea</td>
                <td class="text-center" style=" font-weight:bold;">Area</td>

                <td class="text-center" style=" font-weight:bold;">Eliminar</td>
            </tr>
        </thead>
        <tbody>

            @foreach (ML.Departamento departamento in Model.Departamentos)
            {
                <tr>
                    <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Departamento", new { IdDepartamento = departamento.IdDepartamento })"></a></td>
                    <td class="hidden">@departamento.IdDepartamento</td>
                    <td>@departamento.Nombre</td>
                    <td class="hidden">@departamento.Area.IdArea</td>
                    <td class="text-center">@departamento.Area.Nombre</td>
                    <td class="text-center"><a class="btn btn-danger bi bi-trash-fill" href="@Url.Action("Delete", "Departamento", new { IdDepartamento = departamento.IdDepartamento})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                </tr>
            }

        </tbody>
    </table>
    @*</div>*@
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>

<script type="text/javascript">

    jQuery(document).ready(function ($) {
        $("#myTable").DataTable();
    });

</script>
